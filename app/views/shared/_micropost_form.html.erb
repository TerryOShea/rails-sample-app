<%= form_for(@micropost, html: { multipart: true}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Here's your soapbox..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png' %>
  </span>
<% end %>

<script type="text/javascript">
  $micropostPicture = $('#micropost_picture')
  $micropostPicture.bind('change', function() {
    var sizeInMB = this.files[0].size/1024/1024;
    if (sizeInMB > 5) alert("Maximum file size is 5MB. Try something smaller!");
  });
</script>